        <Snipped>
            <Declarations>
                <Literal>
                    <ID>commandName</ID>
                    <ToolTip>Enter your command name</ToolTip>
                    <Default>MyCommand</Default>
                </Literal>
            </Declarations>
            <Code Language="csharp">
            <![CDATA[ 
            public class $commandName$Command : IRequest<$commandName$Response>
            {
            }

            public class $commandName$CommandHandler : IRequestHandler<$commandName$Command, $commandName$Response>
            {
            }

            public class $commandName$Response
            {
            }
            
            public class $commandName$CommandValidator : AbstractValidator<$commandName$Command>
            {
                public $commandName$Validator()
                {
                }
            }
            ]]>
            </Code>
        </Snipped>
    </CodeSnippet>
